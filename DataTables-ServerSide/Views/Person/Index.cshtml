<table id="dataTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <!-- Add other headers as needed -->
        </tr>
    </thead>
    <tbody>
        <!-- Table body content will be dynamically generated by DataTables -->
    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <!-- Add more th elements for additional columns -->
        </tr>
    </tfoot>
</table>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>
    <script>
        $(document).ready(async function () {
            let table = $('#dataTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    "url": "/Person/GetPeople", // Replace with your controller and action
                    "type": "POST",
                    "error": function (xhr, error, thrown) {
                        console.log("DataTables Ajax Error:", xhr, error, thrown);
                    }
                },
                columns: [
                    { "data": "Id" },
                    { "data": "FirstName" },
                    { "data": "LastName" }
                ],
                initComplete: function () {
                    var api = this.api();

                    $.ajax({
                        url: '/Person/GetPeopleUniqueValues',
                        type: 'GET',
                        dataType: 'json',
                        success: function (data) {
                            api.columns().every(function () {
                                var column = this;
                                var columnName = column.header().innerText; // Convert to lowercase

                                var select = $('<select><option value=""></option></select>')
                                    .appendTo($(column.footer()).empty())
                                    .on('change', function () {
                                        var val = $.fn.dataTable.util.escapeRegex($(this).val());

                                        column.search(val ? '^' + val + '$' : '', true, false).draw();
                                    });

                                console.log(data[columnName]);
                                // Populate dropdown options using fetched unique values
                                if (data.hasOwnProperty(columnName) && Array.isArray(data[columnName])) {
                                    data[columnName].forEach(function (d) {
                                        select.append('<option value="' + d + '">' + d + '</option>');
                                    });
                                }
                            });
                        },
                        error: function (xhr, status, error) {
                            console.error('Error:', xhr.responseText);
                        }
                    });
                }




            });
        });

